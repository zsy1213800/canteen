<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.FoodsMapper">

    <insert id="insert">
        insert into foods (name, descr, price, img, businessname)
        values (#{name}, #{descr}, #{price}, #{img}, #{businessname})
    </insert>

    <update id="updateById">
        update foods
        <set>
            <trim suffixOverrides=",">
                <if test="name != null">name = #{name},</if>
                <if test="descr != null">descr = #{descr},</if>
                <if test="price != null">price = #{price},</if>
                <if test="img != null">img = #{img},</if>
                <if test="businessname != null">businessname = #{businessname},</if>
            </trim>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteById">
        delete
        from foods
        where id = #{id}
    </delete>

    <select id="selectAll" resultType="com.example.entity.Foods">
        select foods.* from foods
        <where>
            <if test="name != null">
                foods.name like concat('%', #{name}, '%')
            </if>
        </where>
        order by id desc
    </select>

    <select id="selectAllbybusiness" resultType="com.example.entity.Foods">
        select foods.* from foods
        <where>
            <if test="name != null">
                and foods.name like concat('%', #{name}, '%')
            </if>
            <if test="businessname != null">
                and foods.businessname = #{businessname}
            </if>
        </where>
        order by id desc
    </select>

</mapper>